# Configurações do Banco de Dados
# Ajuste conforme seu ambiente
# 
# Exemplo para MySQL com pymysql (recomendado para Windows):
# DATABASE_URL=mysql+pymysql://usuario:senha@localhost:3306/portfolio_db
# 
# Exemplo para MySQL com mysqlclient (requer MySQL Connector/C):
# DATABASE_URL=mysql://usuario:senha@localhost:3306/portfolio_db
# 
# Exemplo para PostgreSQL:
# DATABASE_URL=postgresql://usuario:senha@localhost:5432/portfolio_db
# 
# Exemplo para SQLite (desenvolvimento):
# DATABASE_URL=sqlite:///./portfolio.db
#
# NOTA: O código automaticamente adiciona charset=utf8mb4 para MySQL
#       para suportar caracteres especiais e emojis

DATABASE_URL=mysql+pymysql://user:password@localhost:3306/portfolio_db

# Configurações do yfinance
YFINANCE_DAYS_FALLBACK=3650

# Configurações de Cron
CRON_DAILY=0 2 * * *

# Configurações do Otimizador
OPTIMIZER_REFERENCE_DOC=/mnt/data/Backend.docx
OPTIMIZER_TIMEOUT_SEC=30

